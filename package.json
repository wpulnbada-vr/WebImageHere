{
  "name": "webhere-desktop",
  "version": "0.2.0",
  "description": "WebHere - Web Image Archiver Desktop App",
  "main": "main.js",
  "author": "martinwoo",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build:dir": "electron-builder --dir",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "@puppeteer/browsers": "^2.9.0",
    "archiver": "^7.0.1",
    "express": "^4.21.0",
    "puppeteer-core": "^24.37.3",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "sanitize-filename": "^1.6.3",
    "serve-index": "^1.9.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "electron": "^35.0.0",
    "electron-builder": "^26.0.0"
  },
  "build": {
    "appId": "com.webhere.desktop",
    "productName": "WebHere",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "server/**/*",
      "setup/**/*",
      "public/**/*",
      "public-setup/**/*",
      "build/icon.*"
    ],
    "asarUnpack": [
      "node_modules/puppeteer-core/**/*",
      "node_modules/puppeteer-extra/**/*",
      "node_modules/puppeteer-extra-plugin-stealth/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WebHere",
      "deleteAppDataOnUninstall": true,
      "uninstallDisplayName": "WebHere",
      "include": "build/installer.nsh",
      "license": "build/license.txt"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
